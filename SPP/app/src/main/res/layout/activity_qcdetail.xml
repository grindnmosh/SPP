<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ginddesign.spp.QCDetailActivity"
    android:focusable="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/sam_name2"
        android:id="@+id/conName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="32sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/sam_num"
        android:id="@+id/conPhone"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/conName"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/sam_email"
        android:id="@+id/conEmail"
        android:layout_below="@+id/conPhone"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/conNotes"
        android:textColor="#000000"
        android:textSize="18sp"
        android:text="@string/notes"
        android:layout_below="@+id/conEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/makeCall"
        android:src="@drawable/phone"
        android:background="#07000000"
        android:layout_alignTop="@+id/sendMess"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/dialer" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendMess"
        android:src="@drawable/sms"
        android:adjustViewBounds="false"
        android:background="#07000000"
        android:layout_marginBottom="63dp"
        android:layout_above="@+id/conEdit"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/message_icon" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendEmail"
        android:src="@drawable/message"
        android:background="#07000000"
        android:layout_alignTop="@+id/sendMess"
        android:layout_alignRight="@+id/conNotes"
        android:layout_alignEnd="@+id/conNotes"
        android:contentDescription="@string/email_icon" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/conEdit"
        android:src="@drawable/pencil"
        android:cropToPadding="false"
        android:background="#07000000"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/edit_icon" />

</RelativeLayout>
